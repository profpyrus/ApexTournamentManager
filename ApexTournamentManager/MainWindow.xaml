<Window x:Class="ApexTournamentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApexTournamentManager"
        mc:Ignorable="d"
        Height="600" Width="1200"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        FontFamily="Fonts/Dosis">
    <Window.Resources>
        <ResourceDictionary Source="Resources/Colors.xaml"/>
    </Window.Resources>
    <Grid>
        <Border Background="{StaticResource Base}" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Background="{StaticResource BaseHighlight}" Grid.ColumnSpan="2" CornerRadius="10">
                    <TextBlock Text="Apex Legends Tournament Manager" FontSize="22" Foreground="{StaticResource Text}" FontFamily="/Fonts/Dosis"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
